    },
    "name": "@kizahasi/option",
    "author": "kizahasi",
    "repository": {
        "type": "git",
        "url": "https://github.com/kizahasi/option"
    },
    "description": "Represents a value which is either Some or None.",
    "devDependencies": {
        "@commitlint/cli": "17.0.3",
        "@commitlint/config-conventional": "17.0.3",
        "@types/jest": "27.5.2",
        "@typescript-eslint/eslint-plugin": "5.31.0",
        "@typescript-eslint/parser": "5.31.0",
        "eslint": "8.20.0",
        "eslint-config-prettier": "8.5.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "prettier": "2.7.1",
        "rimraf": "3.0.2",
