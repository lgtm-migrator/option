        "prepare": "husky install",
        "lint": "eslint src test",
        "prettier": "yarn prettier:base --write",
        "prettier:base": "prettier \"**/*.{ts,js,json,yml,md}\""
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
